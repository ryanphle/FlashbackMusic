<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/flashback_fragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="@string/flashback_page_title"
            android:textSize="35dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:textColor="#000000"
            android:textStyle="bold"/>

        <ListView
            android:id="@+id/flashback_list"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:divider="#999999"
            android:dividerHeight="2px">
        </ListView>

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="horizontal">

             <LinearLayout
                 android:layout_width="0dp"
                 android:layout_height="wrap_content"
                 android:orientation="vertical"
                 android:gravity="center"
                 android:layout_weight="1">
                 <ImageView
                     android:id="@+id/large_album_art"
                     android:layout_width="80dp"
                     android:layout_height="80dp"
                     android:layout_gravity="center" />
             </LinearLayout>


            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/big_song_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Title"
                        android:layout_gravity="center"
                        android:textSize="20dp"
                        />
                    <TextView
                        android:id="@+id/big_song_artist"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Artist"
                        android:layout_gravity="center"
                        android:textSize="20dp"

                        />

                    <TextView
                        android:id="@+id/big_song_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Location"
                        android:textSize="20dp"
                        android:layout_gravity="center"/>
                    <TextView
                        android:id="@+id/big_song_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Time"
                        android:textSize="20dp"

                        android:layout_gravity="center"/>
            </LinearLayout>



        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/flashback_hidden_next"
        android:layout_width="0dp"
        android:layout_height="0dp" />
    <Button
        android:id="@+id/flashback_hidden_update"
        android:layout_width="0dp"
        android:layout_height="0dp" />
</FrameLayout>
