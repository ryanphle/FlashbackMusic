<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/flashback_fragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:text="@string/flashback_page_title"
                android:textSize="35dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:textColor="#000000"
                android:textStyle="bold"/>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical">
                <ListView
                    android:id="@+id/flashback_list"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:divider="#999999"
                    android:dividerHeight="2px"
                    android:layout_weight="1.5">
                </ListView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="horizontal"
                    android:background="@color/playerBackground"
                    android:layout_weight="1"
                    android:layout_alignParentBottom="true">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_weight="1">
                        <ImageView
                            android:id="@+id/large_album_art"
                            android:layout_width="100dp"
                            android:layout_height="100dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_weight="2"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp">
                        <TextView
                            android:id="@+id/big_song_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Title"
                            android:layout_gravity="left"
                            android:textSize="20dp"
                            android:singleLine="true"
                            android:ellipsize="end"/>
                        <TextView
                            android:id="@+id/big_song_artist"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Artist"
                            android:layout_gravity="left"
                            android:textSize="15dp"
                            android:singleLine="true"
                            android:ellipsize="end"/>
                        <TextView
                            android:id="@+id/big_song_location"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Location"
                            android:textSize="15dp"
                            android:layout_gravity="left"
                            android:singleLine="true"
                            android:ellipsize="end"/>
                        <TextView
                            android:id="@+id/big_song_time"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Time"
                            android:textSize="15dp"
                            android:layout_gravity="left"
                            android:singleLine="true"
                            android:ellipsize="end"/>
                        <TextView
                            android:id="@+id/last_played_by"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Last played by:"
                            android:textSize="15dp"
                            android:layout_gravity="left"
                            android:singleLine="true"
                            android:ellipsize="end"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>
